<div class="container">
  <h2 class="text-center">Users</h2>
  <div class="col-lg-8 col-lg-offset-2">
    <table class="table table-striped table-hover">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Email</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></p></td>
          <td><%= user.surname %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to 'View', user_path(user), class: "btn btn-info btn-width" %>
          </td>
          <td>
            <% if can? :update, @user %>
              <%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning btn-width" %>
            <% end %>
          </td>
          <td>
            <% if can? :destroy, @user %>
              <%= link_to 'Delete', user_path(user), method: :delete,
              data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-width" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
