<div class="input_border">

 <h2>You can edit this data:</h2>
 <%= form_with(model: @user, local: true) do |f| %>

   <div class="form-group">
     <%= f.label :name %><br />
     <%= f.text_field :name, autofocus: true, class: "form-control" %>
   </div>

   <div class="form-group">
     <%= f.label :surname %><br />
     <%= f.text_field :surname, class: "form-control" %>
   </div>

   <div class="form-group">
     <%= f.label :age %><br />
     <%= f.text_field :age, class: "form-control" %>
   </div>

   <div class="form-group">
     <%= radio_button("user", "gender", "Male") %>
     <%= f.label :male %><br />
     <%= radio_button("user", "gender", "Female") %>
     <%= f.label :female %>
   </div>

   <div class="actions">
     <%= f.submit "Update", class: "btn btn-outline-primary" %>
   </div>
   
   <%= link_to "Back", users_path, class: "btn btn-outline-dark" %>
 <% end %>
</div>
