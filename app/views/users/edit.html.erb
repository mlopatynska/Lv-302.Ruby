<h2 class="text-center">Edit User</h2>

<div class="container">
  <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4">

    <%= form_with(model: @user, local: true) do |f| %>

      <div class="field form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "off" , class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :surname %><br />
        <%= f.text_field :surname, autocomplete: "off" , class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= radio_button("user", "gender", "Male") %>
        <%= f.label :male %><br />
        <%= radio_button("user", "gender", "Female") %>
        <%= f.label :female %><br />
      </div>

      <div class="field form-group">
        <%= f.label :age %><br />
        <%= f.number_field :age, in: 1..100, autocomplete: "off" , class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Edit" , class: "btn btn-warning" %>
      </div>

    <% end %>

    <%= link_to "Back", :back, class: "btn my-btn" %>
  </div>
</div>
